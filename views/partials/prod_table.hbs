<h2 style="color:crimson;">Lista de Productos</h2>
{{#if products}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>
                    <img width="30" src="{{this.thumbnail}}" alt="">
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
{{/if}}
